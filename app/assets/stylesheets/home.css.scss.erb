  }

 .container h1, h2, h3, h4 {
   font-size: 3vw;
   color: #505050;
  }

  .display-text {
    padding: 1.5vh 0 0 0px;
    font-size: 2.5vw;
  }

  .number-circle {
    float: left;
    border-radius: 50%;
    behavior: url(PIE.htc);
    /* remove if you don't care about IE8 */
    width: 1.5em;
    height: 1.5em;
    padding: .5vw;
    margin-right: 2vw;
    background: #fff;
    color: #fff;
    background: #63aae1;
    text-align: center;
    font: 3vw Arial, sans-serif;
  }

  .how-step {
    clear: both;
    padding: 2vh 0 0 0;
  }

  .how-text {
    padding: 1.5vh 0 0 0;
    font-size: 1.5vw;
  }

  .main-image {
    z-index: -1;
    position: relative;
    width: 64%
  }

  .uvp {
    padding: .25em .25vw .25em 1.0vw;
    width: 64%;
    height: 21%;
    background: rgba(60, 131, 181, 0.77);
    position: absolute;
    bottom: 0;
    left: 18%;
    display: block;
    text-align: left;
    font-size: 1vh;
  }

  .uvp h1 {
    color: #fff;
    font-size: 1.7vw;
    margin-top: .3vh;
    display: inline;
  }

  .join-button {
    background: #0a8bcd;
    color: #fff;
    border: none;
    border-radius: .273vw;
