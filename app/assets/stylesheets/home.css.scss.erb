h1 {
  font-weight: bold;
}

em {
  font-style: italic;
}

.login-link-top {
  padding-right: 40px;
}

#contaminant-table th {
  vertical-align: middle;
  width: px;
}

.contaminant-table-header {
  padding: 10px 10px 10px 10px;
  display: inline-block;
}

.main-nav {
  padding: 0 5% 0 8%;
}

.landing-container {
  padding: 0;
  margin: -1.0em auto 0 auto;
  text-align: center;
  font-size: 1em;
}

.join-button:hover, .blue-button:hover {
  background: #0283c5;
  cursor: pointer;
}

.ui-widget-content a {
  color: #fff;
  text-decoration: none;
}

.how-container {
  margin: 0 0 0 23%;
}

.sign-up-button, .login-button {
  margin: 10px 0 0 0;
}

#sign-up-form, #login-form, #password-reset-form, #new-password-form {
  margin: 15px 0 0 0;
}

.login-dialog a, .has-account a {
  color: #63aae1;
}

.login-dialog a:hover, .has-account a:hover {
  text-decoration: underline;
}

.no-account {
  margin: 15px 0 0 0;
}

.ui-dialog-titlebar-close {
  visibility: hidden;
}

.icon-user {
  background-image: url(<%= asset_path 'icon-user.png' %>);
}

.icon-password {
  background-image: url(<%= asset_path 'icon-password.png' %>);
}

.icon-email {
  background-image: url(<%= asset_path 'icon-email.png' %>);
}

.error {
  color: red;
}

.sign-up-error {
  margin: 0 0 10px 0;
}

.has-account {
  display: inline-block;
  margin: 23px 0 0 0;
  font-size: 86%;
  color: #5e5e5e;
}

.user-link {
  background: #e5e5e5;
  margin: -20px 0 30px 0;
  border: 1px dotted #aaa;
}

nav {
  margin-top: 0;
}

.welcome-user {
  padding-top: 17px;
  padding-left: 15px;
  color: #111;
}

.final-grid {
  padding-top: 2vh;
  clear: both;
}