html,
body {
  font-size: .875em;
}

#wrap {
  /* Negative indent footer by its height */
  margin: 0 auto -2.5em;
  /* Pad bottom by footer height */
  padding: 0 0 5em;
}

#footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #eee;
  text-align: center;
  border-top: 1px solid #666;
  padding-top: .7em;
}

#footer p {
  margin: .25em;
}

.copyright {
  font-size: 80%;
}

#contaminant-table td {
  font-size: 12px;
  vertical-align: middle;
  border: 1px dotted #ccc;
  padding: 10px 10px 10px 17px;
}

#contaminant-table tbody td:first-child {
  padding: 3px;
}

.arc path {
  stroke: #fff;
}

@font-face {
  font-family: 'MuliRegular';
  src: url(<%= asset_path 'muli-regular-webfont.eot' %>);
  src: url(<%= "#{asset_path('muli-regular-webfont.eot')}?#iefix" %>) format("embedded-opentype"), url(<%= asset_path 'muli-regular-webfont.woff' %>) format("woff"), url(<%= asset_path 'muli-regular-webfont.ttf' %>) format("truetype"), url( "#{asset_path('muli-regular-webfont.svg')}#muliregular" ) format("svg");
  font-weight: normal;
  font-style: normal;
}

body, h1, h2, h3, h4, h5, a {
  font-family: 'MuliRegular', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  letter-spacing: 1px;
}

.container {
  margin-left: 7.5vw;
  width: 80vw;
}

.display-settings-container {
  width: 50%;
  padding-bottom: 120px;
}

.create-model-container {
  width: 90%;
  padding-bottom: 120px;
}

@media only screen and (min-width: 768px) {

  @media only screen and (max-width: 1059px) {
    #main-content {
      padding-top: 24vh;
    }
  }

  @media only screen and (min-width: 1060px) {
    #main-content {
      padding-top: 6.25em;
