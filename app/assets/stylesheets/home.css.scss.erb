    width: 270px;
    padding: 5px;
  }

  .button-section {
    clear: both;
    padding-top: 20px;
  }

  .button-section input {
    background-color: #63aae1;
    color: #fff;
    font: 20px Arial;
    border-radius: 10px;
    padding: 10px;
  }
}

