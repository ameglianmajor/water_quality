    padding: .40vh .49vw .164vh .436vw;
    float: right;
    margin: .40vh 20% .20vh .54vw;
    display: inline;
    border: 1px solid #fff;
  }

  .ui-dialog {
    z-index: 1040; 
  }

  .sign-up-field, .login-field, .password-reset-field, .new-password-field {
    float: left;
    clear: both;
    margin-bottom: 16px;
    color: #424242;
  }

  .form-text-input {
    background-repeat: no-repeat;
    background-position: 236px 7px;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    display: block;
    font-size: 15px;
    padding: 6px;
    width: 270px;
  }

  .blue-button {
    background: #0a8bcd;
    color: #fff;
    border: none;
    border-radius: 5px;
    display: inline;
    border: 2px solid #fff;
