<div class="sign-up-dialog js-sign-up-dialog" title="Sign Up">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
    <div class="error sign-up-error js-sign-up-error"></div>
    <div class="sign-up-field">
      <%= f.text_field :first_name, class: 'text ui-widget-content ui-corner-all form-text-input icon-user js-user-name-first', placeholder: 'First Name' %>
    </div>
    <div class="sign-up-field">
      <%= f.text_field :last_name, class: 'text ui-widget-content ui-corner-all form-text-input icon-user js-user-name-last', placeholder: 'Last Name' %>
    </div>
    <div class="sign-up-field">
      <%= f.email_field :email, class: 'text ui-widget-content ui-corner-all form-text-input icon-email js-user-email', placeholder: 'Email Address' %>
    </div>
    <div class="sign-up-field">
      <%= f.password_field :password, class: 'text ui-widget-content ui-corner-all form-text-input icon-password js-user-password', placeholder: 'Password' %>
    </div>
    <div class="sign-up-field">
      <%= f.password_field :password_confirmation, class: 'text ui-widget-content ui-corner-all form-text-input icon-password js-user-password-verify', placeholder: 'Verify Password' %>
    </div>
    <div class='modal-submit sign-up-field sign-up-button'>
      <input type="submit" class="blue-button sign-up-submit js-sign-up-submit" value="submit" />
    </div>
  <% end %>
  <div class="has-account">
    <p>Have an account already? <a href="#" class="js-has-account">Log in</a></p>
  </div>
</div>
